# FS25 Bot Veritabanı Yapılandırması
FS25_BOT_DB_PATH=./data/fs25_bot.json                            # Bot veritabanı dosya konumu
FS25_BOT_UPTIME_FILE=./data/uptime_data.json                     # Çalışma süresi verilerinin kaydedileceği dosya

# Güvenlik ve Bağlantı Ayarları
FS25_BOT_DISABLE_CERTIFICATE_VERIFICATION=false                  # SSL sertifikası doğrulamasını devre dışı bırakma
FS25_BOT_FETCH_RETRIES=3                                         # Bağlantı hatası durumunda yeniden deneme sayısı
FS25_BOT_FETCH_RETRY_DELAY_MS=3000                               # Yeniden denemeler arasındaki bekleme süresi (ms)
FS25_BOT_POLL_INTERVAL_MINUTES=5                                 # Sunucu durumunu kontrol etme sıklığı (dakika)

# Bildirim Ayarları
FS25_BOT_DISABLE_SAVEGAME_MESSAGES=false                         # Kayıt mesajlarını devre dışı bırakma
FS25_BOT_DISABLE_UNREACHABLE_FOUND_MESSAGES=false                # Sunucu erişilemez mesajlarını devre dışı bırakma

# Discord Yapılandırması
FS25_BOT_DISCORD_SERVER_NAME=                                    # Discord sunucu adı
FS25_BOT_DISCORD_CHANNEL_NAME=                                   # Ana kanal adı
FS25_BOT_DISCORD_TOKEN=Token.123ABC-example-token                # Discord bot token
DAILY_SUMMARY_CHANNEL_ID=                                        # Günlük özet kanalı ID
UPDATE_CHANNEL_ID=                                               # Güncelleme kanalı ID
FS25_BOT_DAILY_SUMMARY_CHANNEL_ID=                               # Alternatif günlük özet kanalı ID
FS25_BOT_UPDATE_CHANNEL_ID=                                      # Alternatif güncelleme kanalı ID

# Farming Simulator 25 Sunucu URL'leri
FS25_BOT_URL_CAREER_SAVEGAME=http://sunucu-adresiniz:port/feed/dedicated-server-savegame.html?code=sizin-kodunuz&file=careerSavegame
FS25_BOT_URL_SERVER_STATS=http://sunucu-adresiniz:port/feed/dedicated-server-stats.xml?code=sizin-kodunuz

# Günlük İstatistik Ayarları
FS25_BOT_DAILY_STATS_HOUR=17                                     # Günlük istatistiklerin gönderileceği saat (24 saat formatında)
FS25_BOT_DAILY_STATS_MINUTE=0                                    # Günlük istatistiklerin gönderileceği dakika

# Watchdog Yapılandırması
FS25_BOT_SCRIPT_PATH=./src/server.js                             # Bot başlangıç dosyası
FS25_BOT_WATCHDOG_CHECK_INTERVAL_MS=60000                        # Kontrol aralığı (1 dakika)
FS25_BOT_WATCHDOG_RESTART_DELAY_MS=5000                          # Yeniden başlatma gecikmesi (5 saniye)
FS25_BOT_WATCHDOG_MAX_CRASHES=10                                 # İzin verilen maksimum çökme sayısı
FS25_BOT_WATCHDOG_CRASH_RESET_TIME_MS=3600000                    # Çökme sayacını sıfırlama süresi (1 saat)
FS25_BOT_LOG_DIR=./logs                                          # Log dosyalarının kaydedileceği dizin