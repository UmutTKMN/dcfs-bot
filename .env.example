# FS25 Bot Database Configuration
FS25_BOT_DB_PATH=./data/fs25_bot.json                            # Bot database file path
FS25_BOT_UPTIME_FILE=./data/fs25_uptime.json                     # Player uptime data file
FS25_BOT_PLAYER_LOGS_DIR=./logs/players                          # Player activity logs directory

# Security and Connection Settings
FS25_BOT_DISABLE_CERTIFICATE_VERIFICATION=false                  # Disable SSL certificate verification
FS25_BOT_FETCH_RETRIES=3                                         # Retry count on connection error
FS25_BOT_FETCH_RETRY_DELAY_MS=3000                               # Delay between retries (ms)
FS25_BOT_POLL_INTERVAL_MINUTES=5                                 # Server status polling interval (minutes)

# Notification Settings
FS25_BOT_DISABLE_SAVEGAME_MESSAGES=false                         # Disable savegame notifications
FS25_BOT_DISABLE_UNREACHABLE_FOUND_MESSAGES=false                # Disable unreachable server notifications

# Discord Configuration
FS25_BOT_DISCORD_SERVER_NAME=                                    # Discord server name
FS25_BOT_DISCORD_CHANNEL_NAME=                                   # Main channel name
FS25_BOT_DISCORD_TOKEN=Token.123ABC-example-token                # Discord bot token
FS25_BOT_CLIENT_ID=                                              # Discord client ID

# Discord Channel IDs
FS25_BOT_DAILY_SUMMARY_CHANNEL_ID=                               # Daily summary channel ID
FS25_BOT_UPDATE_CHANNEL_ID=                                      # Update channel ID
FS25_BOT_PLAYER_ACTIVITY_CHANNEL_ID=                             # Player activity channel ID
FS25_BOT_MODS_CHANNEL_ID=                                        # Mod/DLC channel ID

# Farming Simulator 25 Server URLs
FS25_BOT_URL_CAREER_SAVEGAME=http://your-server:port/feed/dedicated-server-savegame.html?code=your-code&file=careerSavegame
FS25_BOT_URL_SERVER_STATS=http://your-server:port/feed/dedicated-server-stats.xml?code=your-code

# Daily Stats Settings
FS25_BOT_DAILY_STATS_HOUR=17                                     # Hour for daily stats (24h format)
FS25_BOT_DAILY_STATS_MINUTE=0                                    # Minute for daily stats

# Watchdog Configuration
FS25_BOT_SCRIPT_PATH=./src/server.js                             # Bot entry script
FS25_BOT_WATCHDOG_CHECK_INTERVAL_MS=60000                        # Watchdog check interval (ms)
FS25_BOT_WATCHDOG_RESTART_DELAY_MS=5000                          # Restart delay (ms)
FS25_BOT_WATCHDOG_MAX_CRASHES=10                                 # Max allowed crashes
FS25_BOT_WATCHDOG_CRASH_RESET_TIME_MS=3600000                    # Crash counter reset time (ms)
FS25_BOT_LOG_DIR=./logs/watchdog                                 # Watchdog log directory

FS25_BOT_MAINTENANCE_MODE=false                                  # Enable maintenance mode